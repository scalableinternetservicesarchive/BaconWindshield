<div class="jumbotron">
	<div class="row col-md-offset-1">
		<h1>Listing favorites</h1>
		
		<table class="table table-hover table-striped">
		  <thead>
		    <tr>
		      <th>Location</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>
		
		  <tbody>
		    <% current_user.favorites.each do |favorite| %>
			      <tr>
			        <td><%= favorite.location.name %></td>
			
			        <td><%= link_to favorite, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right" do %>
			        	<span class = "glyphicon glyphicon-trash"></span>
			        </td>
			        <% end %>
			      </tr>
		    <% end %>
		  </tbody>
		</table>
		
		<br>
	</div>
</div>
