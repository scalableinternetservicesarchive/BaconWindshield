<div class="row col-md-offset-1">
	<h1>Locations</h1>
	
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @locations.each do |location| %>
			<tr>
				<td><%= link_to location.name, location %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	
</div>
